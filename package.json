{
  "name": "polymarket-credential-server",
  "version": "0.1.4",
  "description": "Server that receives Polymarket credentials and private key, returns checksummed address; optional MongoDB URI decoder.",
  "main": "src/index.js",
  "scripts": {
    "start": "node -r dotenv/config src/credential-check-server.js",
    "dev": "node -r dotenv/config --watch src/credential-check-server.js",
    "test": "node --test test/server.test.js test/mongo-decoder.test.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "mongodb": "^6.10.0",
    "@polymarket/clob-client": "^5.2.0",
    "ethers": "^5.7.2"
  }
}
